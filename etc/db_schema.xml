<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="ndr_product_label">
    <column xsi:type="int" name="label_id" unsigned="true" identity="true" nullable="false" comment="Entity Id"/>
    <column xsi:type="text" name="label_image" nullable="false" comment="label image"/>
    <column xsi:type="varchar" name="name" nullable="false" length="255" comment="label name"/>
    <column xsi:type="text" name="conditions_serialized" nullable="false" comment="cond serialized"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
    <column name="label_id"/>
    </constraint>
    </table>
</schema>
